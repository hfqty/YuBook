<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="99dp"
        android:layout_marginTop="20dp"
        android:layout_gravity="center"
        android:text="@string/income"
        android:textColor="#000000"
        android:textSize="30sp"

        >
    </TextView>
    <Button
        android:background="@drawable/btn_circle"
        android:id="@+id/button_new_income_record"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:text="@string/records"
        android:textSize="20sp"
        android:textColor="#ffffff"
        android:layout_gravity="center_horizontal"
        ></Button>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="79dp"
        android:layout_marginTop="79dp"
        android:orientation="horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="77dp"
            android:text="@string/incometype"
            android:textSize="20sp"
            android:textColor="#000000"
            android:labelFor="@+id/income_spinner">
        </TextView>

        <Spinner
            android:id="@+id/new_income_source"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:entries="@array/income_from"
            android:textColor="#000000"
            android:textAlignment="center"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="77dp"
        android:orientation="horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:text="@string/incomesource"
            android:textSize="20sp"
            android:textColor="#000000"
            android:labelFor="@+id/new_income_type">
        </TextView>
        <Spinner
            android:id="@+id/new_income_type"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:entries="@array/income_to"
            android:textColor="#000000"
            android:textAlignment="center"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="79dp"
        android:orientation="horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:text="@string/incomeaccount"
            android:textSize="20sp"
            android:textColor="#000000"
            android:labelFor="@+id/new_income_account">
        </TextView>
        <EditText
            android:id="@+id/new_income_account"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:maxLines="1"
           >
        </EditText>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="77dp"
        android:orientation="horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:text="@string/incomeamount"
            android:textSize="20sp"
            android:textColor="#000000"
            android:maxLines="1"
            android:labelFor="@+id/new_income_amount">
        </TextView>
        <EditText
            android:id="@+id/new_income_amount"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:inputType="numberDecimal">

        </EditText>
    </LinearLayout>



</LinearLayout>